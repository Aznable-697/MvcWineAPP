@model MvcWineAPP.Models.Wine

@{
    ViewData["Title"] = "Drink this Wine!";
}

<h1>Drink?</h1>

<h3>Are you sure you want to drink this?</h3>
<div>
    <h4>Wine you are choosing to drink:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vineyard)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vineyard)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WineName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WineName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WineVintage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WineVintage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WineTypes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WineTypes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PairsWith)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PairsWith)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateAdded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateAdded)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="WineID" />
        <input type="submit" value="Drink Me" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
